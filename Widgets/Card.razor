@code {
    [Parameter] public string Id { get; set; }
    [Parameter] public Cards.CardModel Model { get; set; }
    [Parameter] public bool Half { get; set; }

    protected override void OnParametersSet()
    {
        if (Model == null)
        {
            Model = Cards.All.ByName[Id];
        }
        else 
        {
            Id = Model.GetType().Name;
        }
    }
}

<CardView Name="@Id" 
          Type="@Model.Type"
          Art="@Model.Art"
          Text="@Model.Text"
          Half="@Half" />