@inject UserManager Users
@code {
    protected override void OnInitialized()
    {
        Users.SessionsUpdated += () =>
        {
            InvokeAsync(StateHasChanged);
        };
    }
}

@if (Users.Sessions.Any())
{
    <text>Connected users: @string.Join(", ", Users.Sessions.Select(s => s.Username)).</text>
}
else
{
    <text>No connected users.</text>
}
