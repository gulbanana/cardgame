@code {
    [Parameter] public string Id { get; set; }
    [Parameter] public bool Enabled { get; set; }
    [Parameter] public Action Action { get; set; }
    [Parameter] public ICard Model { get; set; }
    [Parameter] public bool Half { get; set; }
    [Parameter] public bool Large { get; set; }
    [Parameter] public int Stack { get; set; }
    [Parameter] public string Color { get; set; }
    private string subType;

    protected override void OnParametersSet()
    {
        if (Model == null)
        {
            Model = All.Cards.ByName(Id);
        }
        else 
        {
            Id = Model.Name;
        }

        if (Model is IActionCard actionCard)
        {
            subType = actionCard.SubType;
        }
    }

    private void OnClick()
    {
        if (Enabled)
        {
            Action();
        }
    }
}

@if (Large)
{
    <div class="active-card @(Enabled ? "active-card--enabled" : "")" @onclick="@OnClick">
        <Magnify>        
            <KingdomCard Name="@Id" Type="@Model.Type" SubType="@subType" Color="@Color" Art="@Model.Art" Cost="@Model.Cost" Text="@Model.Text" Half="@Half" Stack="@Stack" />        
        </Magnify>
    </div>
}
else
{
    <WithTooltip>
        <Content>
            <div class="active-card @(Enabled ? "active-card--enabled" : "")" @onclick="@OnClick">
                <KingdomCard Name="@Id" Type="@Model.Type" SubType="@subType" Color="@Color" Art="@Model.Art" Cost="@Model.Cost" Text="@Model.Text" Half="@Half" Stack="@Stack" />
            </div>
        </Content>
        <Tooltip>
            <Magnify>
                <StackHeader Size="@Stack">                
                    <KingdomCard Name="@Id" Type="@Model.Type" SubType="@subType" Color="@Color" Art="@Model.Art" Cost="@Model.Cost" Text="@Model.Text" Half="false" />
                </StackHeader>
            </Magnify>
        </Tooltip>
    </WithTooltip>    
}