@code {
    [Parameter] public string Name { get; set; }
    [Parameter] public bool Half { get; set; }
    [Parameter] public int Stack { get; set; }
    [Parameter] public string Colour { get; set; } = "special";
    private int TrueCount => Name == "trash" ? Stack - 1 : Stack;
}

@if (Half || TrueCount > 1)
{
    <WithTooltip>
        <Content>
            <Stacked Size="@Stack" Colour="@Colour" Half="@Half">
                <div class="special-card active-border">
                    @if (Half)
                    {
                        <img class="special-card__1x" src="/cards/@(Name)-half.jpg" />
                    }
                    else
                    {
                        <img class="special-card__2x" src="/cards/@(Name)-full.jpg" />
                    }
                </div>
            </Stacked>
        </Content>
        <Tooltip>
            <Magnify>
                <StackHeader Size="@TrueCount">
                    <div class="special-card active-border">
                        <img class="special-card__2x" src="/cards/@(Name)-full.jpg" />
                    </div>
                </StackHeader>
            </Magnify>
        </Tooltip>
    </WithTooltip>
}
else
{
    <Stacked Size="@Stack" Colour="@Colour">
        <div class="special-card active-border">
            <img class="special-card__2x" src="/cards/@(Name)-full.jpg" />
        </div>
    </Stacked>
}