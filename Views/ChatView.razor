@inject IUserSession Session
@code {
    [Parameter] public IReadOnlyList<LogEntry> Model { get; set; }
    [CascadingParameter] public Executor Dispatch { get; set; }
    string newMessage;

    private void SendMessage()
    {
        if (!string.IsNullOrEmpty(newMessage))
        {
            Dispatch(new ChatCommand { Message = newMessage });
            newMessage = null;
        }
    }
}

<div class="chat-view">
    <div class="chat-view__log">
        <VerticalLog>
            @foreach (var entry in Model)
            {
                <div>
                    <span class="chat-view__username">&lt;@(entry.Username)&gt;</span> @entry.Message
                </div>
            }
        </VerticalLog>
    </div>

    <form class="chat-view__entry" @onsubmit="SendMessage">
        <input type="text" @bind="newMessage">
        <ActiveButton Label="Send message" />
    </form>
</div>